{
  "name": "code-hive",
  "version": "1.0.0",
  "private": true,
  "description": "Code Hive Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "prepare": "husky",
    "infra:up": "docker compose -f infra/docker/docker-compose.yml --profile core --profile observability up -d",
    "infra:up:all": "docker compose -f infra/docker/docker-compose.yml --profile core --profile messaging --profile storage --profile observability --profile tools up -d",
    "infra:up:core": "docker compose -f infra/docker/docker-compose.yml --profile core up -d",
    "infra:down": "docker compose -f infra/docker/docker-compose.yml down",
    "infra:down:volumes": "docker compose -f infra/docker/docker-compose.yml down -v",
    "infra:logs": "docker compose -f infra/docker/docker-compose.yml logs -f",
    "infra:ps": "docker compose -f infra/docker/docker-compose.yml ps",
    "db:migrate": "turbo run db:migrate",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed"
  },
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.5",
    "@swc/helpers": "~0.5.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-util": "^30.2.0",
    "lint-staged": "^16.2.7",
    "pnpm": "10.26.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "10.9.2",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
