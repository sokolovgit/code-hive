{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2024",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@users-service/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "jest.config.cts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../../../libs/nestjs"
    },
    {
      "path": "../../../libs/types"
    }
  ]
}
