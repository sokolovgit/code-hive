# Code Hive Application Environment Variables
# Copy this file to .env.local and customize as needed
# These are shared across all services - service-specific overrides go in apps/services/{service}/.env.local

# =============================================================================
# General
# =============================================================================
NODE_ENV=development

# =============================================================================
# Database (PostgreSQL)
# Each service can override DATABASE_URL with its own database
# =============================================================================
DATABASE_URL=postgresql://codehive:codehive@localhost:5432/codehive

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# RabbitMQ
# =============================================================================
RABBITMQ_URL=amqp://codehive:codehive@localhost:5672/codehive

# =============================================================================
# MinIO (S3-compatible storage)
# =============================================================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=codehive
MINIO_SECRET_KEY=codehive123
MINIO_BUCKET=codehive

# =============================================================================
# OpenTelemetry
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAMESPACE=codehive

# =============================================================================
# Loki (Direct push from pino-loki)
# =============================================================================
LOKI_URL=http://localhost:3100

# =============================================================================
# Email (Mailpit for local dev)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
