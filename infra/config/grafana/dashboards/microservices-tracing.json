{
  "dashboard": {
    "title": "Microservices Distributed Tracing",
    "tags": ["tracing", "microservices", "tempo"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Service Map",
        "type": "nodeGraph",
        "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
        "datasource": { "type": "tempo", "uid": "tempo" },
        "options": {
          "edges": {
            "mainStatUnit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Trace Search",
        "type": "traces",
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 12 },
        "datasource": { "type": "tempo", "uid": "tempo" },
        "options": {
          "dedupeBy": "traceID",
          "spanBarType": "tag"
        }
      },
      {
        "id": 3,
        "title": "Trace Duration",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(tempo_spanmetrics_latency_bucket[5m])) by (le, service_name))",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ]
      },
      {
        "id": 4,
        "title": "Trace Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
        "targets": [
          {
            "expr": "sum(rate(tempo_spanmetrics_calls_total[5m])) by (service_name)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ]
      }
    ]
  }
}
