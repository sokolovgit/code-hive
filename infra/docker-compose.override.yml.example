version: '3.8'

# Development Override
# This file extends docker-compose.yml with development-specific configurations.
# Copy this file to docker-compose.override.yml and customize as needed.
#
# Usage:
#   docker-compose -f docker-compose.yml -f docker-compose.override.yml up

services:
  postgres:
    # Enable additional logging in development
    command: postgres -c log_statement=all -c log_destination=stderr

  redis:
    # Disable persistence in development for faster restarts
    command: redis-server --appendonly no

  # Enable development tools
  redis-commander:
    image: rediscommander/redis-commander:latest
    container_name: code-hive-redis-commander
    restart: unless-stopped
    environment:
      REDIS_HOSTS: local:redis:6379
      REDIS_PASSWORD: ${REDIS_PASSWORD:-redis}
    ports:
      - "8081:8081"
    depends_on:
      - redis
    networks:
      - code-hive-network

  pgadmin:
    image: dpage/pgadmin4:latest
    container_name: code-hive-pgadmin
    restart: unless-stopped
    environment:
      PGADMIN_DEFAULT_EMAIL: ${PGADMIN_EMAIL:-admin@codehive.local}
      PGADMIN_DEFAULT_PASSWORD: ${PGADMIN_PASSWORD:-admin}
      PGADMIN_CONFIG_SERVER_MODE: 'False'
    ports:
      - "8080:80"
    depends_on:
      - postgres
    networks:
      - code-hive-network
    volumes:
      - pgadmin_data:/var/lib/pgadmin

volumes:
  pgadmin_data:
    driver: local

