{
  "dashboard": {
    "title": "Logs per Service",
    "tags": ["logs", "services"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Logs by Service",
        "type": "logs",
        "gridPos": { "h": 20, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "{service=~\".+\"}",
            "refId": "A"
          }
        ],
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": false,
          "showCommonLabels": false,
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending",
          "wrapLogMessage": false
        }
      },
      {
        "id": 2,
        "title": "Log Level Distribution",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "sum(count_over_time({service=~\".+\"}[5m])) by (level)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Log Rate by Service",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
        "targets": [
          {
            "expr": "sum(rate({service=~\".+\"}[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "short", "label": "Logs/sec" }, { "format": "short" }]
      }
    ]
  }
}
